<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.projetl3.deltapp.MainActivity"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/camera_capture_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="35dp"
        android:elevation="2dp"
        android:ellipsize="none"
        android:scaleType="fitCenter"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageButton
        android:id="@+id/login_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/rounded_button"
        android:elevation="2dp"
        android:ellipsize="none"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_login"
        android:contentDescription="@string/login" />
    />

    <!---COM-->
    <androidx.camera.view.PreviewView
    android:id="@+id/viewFinder"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/dark_header" />

        <ImageView
            android:id="@+id/pictureTaken"
            android:layout_width="125dp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_launcher_background" />
    </androidx.camera.view.PreviewView>

    <TextView
        android:id="@+id/ocr_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:layout_margin="4dp"
        android:orientation="horizontal"
        android:text="@string/text"
        app:layout_constraintBottom_toTopOf="@+id/camera_capture_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/viewFinder">
    </TextView>

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        app:layout_constraintBottom_toTopOf="@+id/camera_capture_button"
        app:layout_constraintTop_toBottomOf="@+id/ocr_text" />

</androidx.constraintlayout.widget.ConstraintLayout>